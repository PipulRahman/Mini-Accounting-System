@model IEnumerable<MiniAccountingSystem.Models.AccountViewModel>

@{
    ViewData["Title"] = "Chart of Accounts";
}

<h1>Chart of Accounts</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Account</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AccountName)</th>
            <th>@Html.DisplayNameFor(model => model.AccountCode)</th>
            <th>@Html.DisplayNameFor(model => model.ParentAccountName)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                <td>@Html.DisplayFor(modelItem => item.AccountCode)</td>
                <td>@Html.DisplayFor(modelItem => item.ParentAccountName)</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-info">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>