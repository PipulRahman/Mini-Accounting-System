@model MiniAccountingSystem.Models.VoucherViewModel

@{
    ViewData["Title"] = "Delete Voucher";
}

<h1>Delete Voucher</h1>

<h3>Are you sure you want to delete this voucher?</h3>
<div>
    <h4>Voucher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.VoucherId)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.VoucherId)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.VoucherDate)
        </dt>
        <dd class="col-sm-9">
            @Model.VoucherDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.VoucherType)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.VoucherType)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ReferenceNo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ReferenceNo)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Narration)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Narration)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-9">
            @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
    </dl>

    <h3>Voucher Details</h3>
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Account</th>
                <th class="text-end">Debit</th>
                <th class="text-end">Credit</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.VoucherDetails.Any())
            {
                foreach (var detail in Model.VoucherDetails)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => detail.AccountName)</td>
                        <td class="text-end">@detail.DebitAmount.ToString("N2")</td>
                        <td class="text-end">@detail.CreditAmount.ToString("N2")</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="3" class="text-center">No details available.</td></tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="text-end fw-bold">Total:</td>
                <td class="text-end fw-bold">@Model.TotalDebit.ToString("N2")</td>
                <td class="text-end fw-bold">@Model.TotalCredit.ToString("N2")</td>
            </tr>
        </tfoot>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VoucherId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>