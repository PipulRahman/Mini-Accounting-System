@model IEnumerable<MiniAccountingSystem.Models.VoucherViewModel>

@{
    ViewData["Title"] = "Voucher List";
}

<h1>Voucher List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Voucher</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.VoucherDate)</th>
            <th>@Html.DisplayNameFor(model => model.VoucherType)</th>
            <th>@Html.DisplayNameFor(model => model.ReferenceNo)</th>
            <th>@Html.DisplayNameFor(model => model.Narration)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VoucherDate.ToString("yyyy-MM-dd")</td>
                <td>@Html.DisplayFor(modelItem => item.VoucherType)</td>
                <td>@Html.DisplayFor(modelItem => item.ReferenceNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Narration)</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VoucherId" class="btn btn-sm btn-info">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@item.VoucherId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>